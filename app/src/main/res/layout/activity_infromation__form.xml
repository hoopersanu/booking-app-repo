<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/InformationContainer"
    tools:context=".Infromation_Form">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:paddingBottom="100sp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/backgroun_whole"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Your"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="50sp"
            android:textColor="#000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Information"
            android:textColor="#C34245"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="49sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:background="@drawable/main_activity_number_box"
                android:elevation="5sp"
                android:textSize="18sp"
                android:paddingLeft="20sp"
                android:text="Saurabh Gupta"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="14sp"
                android:id="@+id/editTextStoreName"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50dp"
                android:paddingLeft="20sp"
                android:background="@drawable/main_activity_number_box"
                android:elevation="5sp"
                android:ems="10"
                android:hint="Enter Studio Name"
                android:textSize="18sp"
                android:inputType="textPersonName" />

            <EditText
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="Email"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:paddingLeft="20sp"/>

            <EditText
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:ems="10"
                android:hint="+91 999999999"
                android:inputType="textEmailAddress"
                android:paddingLeft="20sp"/>

            <TextView
                android:id="@+id/textViewCategoryTitle"
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:paddingTop="15sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:paddingLeft="20sp"
                android:text="Photographer"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/editTextTeamSize"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:ems="10"
                android:hint="Team Size"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"/>

            <EditText
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:ems="10"
                android:hint="Address"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="50sp"
                android:background="@drawable/main_activity_number_box"
                android:text="Address Proof"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="8sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAddressUpload"
                    android:background="@drawable/main_activity_number_box"
                    android:layout_width="200dp"
                    android:layout_height="49sp"
                    android:layout_marginLeft="50sp"
                    android:elevation="5sp"
                    android:hint="Select Document Type"
                    android:paddingTop="15sp"
                    android:paddingLeft="15sp"
                    android:textSize="15sp" />

                <Button
                    android:background="@drawable/btn_add_favourite_fragment"
                    android:textColor="#A00C0C"
                    android:elevation="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="Upload" />
            </LinearLayout>

            <EditText
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/editTextAddressProofNumber"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:ems="10"
                android:hint="Enter Document ID"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"/>

            <TextView
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:paddingLeft="5sp"
                android:textColor="#000"
                android:text="ID Proof"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewIdProofUpload"
                    android:background="@drawable/main_activity_number_box"
                    android:layout_width="200dp"
                    android:layout_height="49sp"
                    android:layout_marginLeft="50sp"
                    android:elevation="5sp"
                    android:hint="Select Document Type"
                    android:paddingTop="15sp"
                    android:paddingLeft="15sp"
                    android:textSize="1sp" />

                <Button
                    android:background="@drawable/btn_add_favourite_fragment"
                    android:textColor="#A00C0C"
                    android:elevation="5sp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="80dp"
                    android:layout_height="49sp"
                    android:text="Upload" />
            </LinearLayout>

            <EditText
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/editTextIdProofNumber"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:ems="10"
                android:hint="ID Number"
                android:inputType="textPersonName"
                android:paddingLeft="15sp"/>

            <TextView
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="#000"
                android:text="Work Portfolio"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/portfolioUpload"
                android:background="@drawable/main_activity_number_box"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Upload"/>

            <Button
                android:id="@+id/btnSave"
                android:background="#A00C0C"
                android:textColor="#fff"
                android:layout_marginTop="14sp"
                android:elevation="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Save"/>
        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>